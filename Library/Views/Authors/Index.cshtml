@{
  Layout = "_Layout";
}
@using Library.Models
@model List<Library.Models.Author>

<h1>Authors</h1>

@if (@Model.Count == 0)
{
  <p>No authors have been added to the system yet.</p>
}

<ul>
@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
}
</ul>

<button>@Html.ActionLink("Add an author", "Create")</button>
<hr />
<button>@Html.ActionLink("Home", "Index", "Home")</button>