@{
  Layout = "_Layout";
}
@using Library.Models
@model List<Library.Models.Book>

<h1>Books</h1>

@if (@Model.Count == 0)
{
  <p>No books have been added to the system yet.</p>
}

<ul>
@foreach (Book book in Model)
{
  <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
}
</ul>

<button>@Html.ActionLink("Add a book", "Create")</button>
<hr />
<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("All authors", "Index", "Authors")</button>